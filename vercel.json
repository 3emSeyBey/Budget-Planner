{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "public/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/setup",
      "dest": "/api/setup.js"
    },
    {
      "src": "/api/categories",
      "dest": "/api/categories.js"
    },
    {
      "src": "/api/budget",
      "dest": "/api/budget.js"
    },
    {
      "src": "/api/expenses",
      "dest": "/api/expenses.js"
    },
    {
      "src": "/api/smart",
      "dest": "/api/smart.js"
    },
    {
      "src": "/api/analytics",
      "dest": "/api/analytics.js"
    },
    {
      "src": "/api/recommendations",
      "dest": "/api/recommendations.js"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ]
}
